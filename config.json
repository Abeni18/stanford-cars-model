{
    "name": "ResNet18-FixWH",
    "n_gpu": 1,

    "arch": {
        "type": "ResNet18",
        "args": {
            "use_pretrained": true,
            "num_classes": 196
        }
    },
    "data_processing": {
        "type": "CarsDataLoader",
        "args":{
            "data_dir": "data_processing/datasets/training/extracted/",
            "train_metas": "data_processing/datasets/cars_metas/cars_train_annos.mat",
            "resize_width": 512,
            "resize_height": 256,
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 1,
            "limit": null
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy", "top_k_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": true
    }
}
